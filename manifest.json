{
  "manifest_version": 3,
  "name": "__MSG_extName__",
  "version": "1.4",
  "default_locale": "en",
  "description": "__MSG_extDescription__",
  "icons": {
    "16": "assets/icon16.png",
    "32": "assets/icon32.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  },
  "permissions": ["storage", "alarms", "notifications", "sidePanel", "identity"],
  "oauth2": {
    "client_id": "779696374804-2hv2aujg09v7hvfsre3o8kk983ucccs9.apps.googleusercontent.com",
    "scopes": ["https://www.googleapis.com/auth/calendar"]
  },
  "action": {
    "default_title": "__MSG_extName__",
    "default_icon": {
      "16": "assets/icon16.png",
      "32": "assets/icon32.png",
      "48": "assets/icon48.png",
      "128": "assets/icon128.png"
    }
  },
  "side_panel": {
    "default_path": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; connect-src 'self' https://www.googleapis.com; style-src 'self' https://cdn.jsdelivr.net; font-src 'self' https://cdn.jsdelivr.net"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  }
}
